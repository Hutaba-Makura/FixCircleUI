{
    "manifest_version": 3,
    "name": "Fix Circle UI - コミケWebカタログのUIを改善",
    "version": "1.1",
    "description": "コミックマーケットのWebカタログのUIを改善します。",
    "content_scripts": [
      {
        "matches": ["https://webcatalog-free.circle.ms/Circle/List*", "https://webcatalog-free.circle.ms/User/Favorites*"],
        "js": ["color-filter.js", "link-replacer.js"],
        "run_at": "document_idle"
      },
      {
        "matches": ["https://webcatalog-free.circle.ms/Map*"],
        "js": ["map-color-filter.js"],
        "run_at": "document_idle"
      }
    ],
    "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}